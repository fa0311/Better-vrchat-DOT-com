            ],
            "js": [
                "src/data/interval_ids.js",
                "src/util/util.js",
                "src/util/vrc_util.js",
                "src/api/vrchat_api.js",
                "src/dom/dom.js",
                "src/dom/vrc_dom.js",
                "src/features/better_location_card.js",
                "src/features/fap_system.js",
                "src/features/better_avatars.js",
                "src/better_vrc_dot_com.js"
            ]
        }
    ]
}